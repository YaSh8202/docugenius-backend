{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./build"
  },
  "include": ["src/**/*", "config/**/*", "api/**/*"],
  "exclude": ["node_modules", "build"]
}
